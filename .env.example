# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/mazufa-records

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
CLOUDFRONT_DOMAIN=your-cloudfront-domain
CLOUDFRONT_DISTRIBUTION_ID=your-cloudfront-distribution-id

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=Mazufa Records <noreply@mazufarecords.com>
SUPPORT_EMAIL=support@mazufarecords.com

# Payment Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# AI Configuration
OPENAI_API_KEY=your_openai_api_key
STABILITY_API_KEY=your_stability_api_key

# Security Configuration
RATE_LIMIT_WINDOW_MS=600000
RATE_LIMIT_MAX=100
SESSION_SECRET=your_session_secret_here

# White Label Configuration
DEFAULT_WHITE_LABEL_PLAN=basic
WHITE_LABEL_DOMAIN=mazufarecords.com

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=365

# Cache Configuration
REDIS_URI=redis://localhost:6379

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_WHITE_LABEL=true
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Testing Configuration
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined

# CDN Configuration
CDN_URL=https://cdn.mazufarecords.com

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Social Media Integration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# Third-party Service Integration
MUSIC_RECOGNITION_API_KEY=your_music_recognition_api_key
LYRICS_API_KEY=your_lyrics_api_key
MUSIC_METADATA_API_KEY=your_music_metadata_api_key

# Blockchain Integration
WEB3_PROVIDER_URL=your_web3_provider_url
NFT_CONTRACT_ADDRESS=your_nft_contract_address
WALLET_PRIVATE_KEY=your_wallet_private_key

# Geographic Configuration
DEFAULT_TIMEZONE=UTC
DEFAULT_LANGUAGE=en
SUPPORTED_COUNTRIES=US,UK,CA,AU,NZ,EU

# System Limits
MAX_UPLOAD_SIZE=100000000
MAX_SONGS_PER_USER=1000
MAX_STORAGE_PER_USER=10000000000
