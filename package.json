    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.6.2",
    "jest-junit": "^16.0.0",
    "lint-staged": "^14.0.0",
    "mongodb-memory-server": "^8.15.1",
    "nodemon": "^3.0.1",
