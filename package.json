    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --reporters='default' --reporters='jest-junit'",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
